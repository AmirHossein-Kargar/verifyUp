# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/VerifyUp

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_access_token_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_minimum_32_characters_long

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Profile image encryption (32+ chars or 64-char hex). Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
IMAGE_ENCRYPTION_KEY=your_32_byte_hex_or_long_random_string_here
# API public URL (for CSP imgSrc when API is on a different domain, e.g. https://api.verifyup.ir)
# API_PUBLIC_URL=https://api.verifyup.ir

# SMS Configuration (sms.ir)
# Get your API key from: https://sms.ir/panel/developers
SMS_API_KEY=your_sms_ir_api_key_here
# Environment: 'production' or 'sandbox' (sandbox for testing without sending real SMS)
SMS_ENVIRONMENT=sandbox
# Template ID for OTP verification (get from sms.ir panel or use 123456 for sandbox)
SMS_TEMPLATE_ID=123456
